{
  "name": "mark-downy",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivan-nosar/mark-downy.git"
  },
  "main": "./dist/main.js",
  "scripts": {
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "dev:renderer": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "dev:main": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "dev": "cross-env START_HOT=1 npm run dev:renderer",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "build": {
    "productName": "MarkDowny",
    "appId": "ru.ivan-nosar.mark-downy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ]
  },
  "dependencies": {
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "4.9.1",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/polyfill": "7.11.5",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@hot-loader/react-dom": "16.13.0",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.2",
    "css-loader": "4.3.0",
    "electron": "10.1.2",
    "file-loader": "6.1.0",
    "fork-ts-checker-webpack-plugin": "5.2.0",
    "html-webpack-plugin": "4.4.1",
    "image-webpack-loader": "7.0.1",
    "lodash": "4.17.20",
    "source-map-loader": "1.1.0",
    "style-loader": "1.2.1",
    "tslint": "6.1.3",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "5.1.4"
  }
}
